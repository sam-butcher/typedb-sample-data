# Fetch the text and all direct comments of the most recent post

match 
  $post isa post, has creation-timestamp $post-created;
fetch 
  $post: post-text;
  comments: {
    match
      $comment isa comment;
      (parent: $post, comment: $comment) isa commenting;
    fetch
      $comment: comment-text;
  }; 
sort $post-created; limit 1;
